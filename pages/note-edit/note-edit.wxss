/* pages/NoteEdit/NoteEdit.wxss */
page{
    height: 100%;
  }
   
  .the-image{
    position:absolute;
    width: 100%;
    height: 100%;
  }
   
  .the-text{
    position:absolute;
    left: 5%;
    top: 3.5%;
    font-size: 28rpx;
    text-align: left;
  }
   
  .the-btn{
    font-size: 24rpx;
    position:absolute;
    right: 25%;
    top: 50%;
    height: 5%;
    width: 20%
  }
   
  .the-view{
    position:absolute;
    top: 2%;
    width: 94%;
    left: 3%;
    height: 40%;
    background-color: rgb(236, 244, 247);
    opacity: 0.50;
    filter: alpha(opacity=50);
  }
   
  .the-textarea{
    overflow:hidden;
  }